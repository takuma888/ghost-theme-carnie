<div class="card">
    <div class="card-image">
        <figure class="image">
            <a href="{{url}}"><img src="{{feature_image}}" alt="Placeholder image"></a>
        </figure>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    {{#primary_author}}
                        <a href="{{url}}"><img src="{{profile_image}}" alt="{{name}}'s Picture" /></a>
                    {{/primary_author}}
                </figure>
            </div>
            <div class="media-content">
                <p class="title is-4"><a href="{{url}}" class="has-text-dark">{{title}}</a></p>
                <p class="subtitle is-6">{{#primary_author}}<a href="{{url}}">@{{name}}</a>{{/primary_author}}</p>
            </div>
        </div>

        <div class="content">
            <a href="{{url}}" class="has-text-dark">{{excerpt}}</a> {{tags}}
            <br>
            {{date published_at timeago="true"}}
        </div>
    </div>
</div>